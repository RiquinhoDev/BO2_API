{
  "name": "my-app-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "ioredis": "^5.7.0",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^4.2.1",
    "node-schedule": "^2.1.1",
    "p-queue": "^8.1.0",
    "redis": "^5.8.0",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-validator": "^3.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.14",
    "@types/node-schedule": "^2.1.7",
    "@types/xlsx": "^0.0.36",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint src/ --ext .ts",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "check-ac-sync": "ts-node scripts/check-ac-sync.ts",
    "check-ac-sync:verbose": "VERBOSE=true ts-node scripts/check-ac-sync.ts",
    "check-ac-sync:export": "EXPORT_JSON=true ts-node scripts/check-ac-sync.ts",
    "reengagement:indexes": "ts-node src/scripts/create-indexes.ts",
    "reengagement:test": "ts-node src/scripts/test-models.ts",
    "reengagement:seed": "ts-node src/scripts/seed-product-profiles.ts",
    "migrate:v2": "ts-node scripts/migration/migrate-to-v2.ts",
    "migrate:v2:dry": "DRY_RUN=true ts-node scripts/migration/migrate-to-v2.ts",
    "migrate:verify": "ts-node scripts/migration/verify-migration.ts",
    "migrate:rollback": "ts-node scripts/migration/rollback-v2.ts",
    "migrate:rollback:dry": "DRY_RUN=true ts-node scripts/migration/rollback-v2.ts",
    "test:architecture": "mocha -r ts-node/register tests/sprint1/architecture.test.ts --timeout 30000",
    "diagnose:segregation": "ts-node scripts/diagnostics/verify-data-segregation.ts",
    "diagnose:dashboard": "ts-node scripts/diagnostics/diagnose-dashboard-stats.ts",
    "diagnose:email": "ts-node scripts/diagnostics/verify-email-tracking.ts",
    "diagnose:all": "npm run diagnose:segregation && npm run diagnose:dashboard && npm run diagnose:email",
    "maintenance:indexes": "ts-node scripts/maintenance/create-indexes.ts",
    "validate:full": "npm run build && npm run lint && npm test && npm run check-ac-sync"
  }
}
