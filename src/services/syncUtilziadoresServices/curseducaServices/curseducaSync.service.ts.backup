export async function syncCurseducaFull(groupId?: string): Promise<SyncResult> {
  logger.info("[CurseducaSync] Iniciando full sync", { groupId: groupId || "TODOS" })

  const result: SyncResult = {
    success: false,
    stats: {
      total: 0,
      inserted: 0,
      updated: 0,
      errors: 0
    },
    errors: []
  }

  try {
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // âœ… USAR ADAPTER REAL (NÃƒO MOCK!)
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

    logger.info("[CurseducaSync] ğŸš€ Buscando dados via curseduca.adapter...")

    const adapterData = await curseducaAdapter.fetchCurseducaDataForSync({
      includeProgress: true,
      includeGroups: true,
      groupId: groupId // Se undefined, busca todos os grupos Clareza
    })

    if (adapterData.length === 0) {
      logger.warn("[CurseducaSync] âš ï¸ Adapter retornou 0 users")
      result.success = true
      return result
    }

    logger.info(`[CurseducaSync] âœ… Adapter retornou ${adapterData.length} users`)

    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // CONVERTER DADOS DO ADAPTER PARA FORMATO DO SYNC
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

    const usersToSync: CurseducaSyncData[] = adapterData.map((user) => ({
      email: user.email,
      groupId: user.groupId?.toString() || "", // Converter para string
      name: user.name,
      progress: user.progress?.percentage || 0,
      enrollmentDate: user.enrolledAt
        ? safeDate((user as any).enrolledAt)
        : user.joinedDate
          ? safeDate((user as any).joinedDate)
          : new Date(),
      lastAccess: new Date() // CursEduca nÃ£o fornece lastAccess especÃ­fico
    }))

    logger.info(`[CurseducaSync] ğŸ“¦ Convertidos ${usersToSync.length} users para sync`)

    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // PROCESSAR BATCH
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

    const batchResult = await syncCurseducaBatch(usersToSync)

    logger.info("[CurseducaSync] âœ… Full sync completo", {
      stats: batchResult.stats
    })

    return batchResult
  } catch (error: any) {
    result.success = false
    result.errors = [error.message]

    logger.error("[CurseducaSync] âŒ Erro no full sync", {
      groupId,
      error: error.message,
      stack: error.stack
    })

    return result
  }
}

